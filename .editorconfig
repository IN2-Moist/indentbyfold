# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = crlf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[{*.{vcxproj,vcxproj.user}}]
indent_size = 2
indent_style = space
insert_final_newline = false

[*.yml]
indent_size = 2
indent_style = space
end_of_line = lf

[*.{py,sh}]
end_of_line = lf
